rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isValidImage() {
      return request.resource.size < 10 * 1024 * 1024 && // 10MB
             request.resource.contentType.matches('image/.*');
    }

    function isValidDocument() {
      return request.resource.size < 50 * 1024 * 1024 && // 50MB
             (request.resource.contentType.matches('application/pdf') ||
              request.resource.contentType.matches('application/msword') ||
              request.resource.contentType.matches('application/vnd.openxmlformats.*'));
    }

    // Profile photos
    match /profile-photos/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) && isValidImage();
      allow delete: if isOwner(userId);
    }

    // Documents (accessible by arrangement participants)
    match /documents/{arrangementId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidDocument();
      allow delete: if isAuthenticated();
    }

    // Photos (accessible by arrangement participants)
    match /photos/{arrangementId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidImage();
      allow delete: if isAuthenticated();
    }

    // Thumbnails
    match /thumbnails/{arrangementId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidImage();
      allow delete: if isAuthenticated();
    }

    // Encrypted files (E2EE encrypted, so content is protected)
    match /encrypted-files/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isOwner(userId);
    }
  }
}
